<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/checkNetworkBtn"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/check_network_connection" />

    <Button
        android:id="@+id/generate204RequestBtn"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/google_204_test_request" />

    <Button
        android:id="@+id/generateKenh14RequestBtn"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/kenh14_test_request" />

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myProgressBar"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/gplus_colors"
        app:cpb_rotation_speed="1.0"
        app:cpb_sweep_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_min_sweep_angle="10"
        app:cpb_max_sweep_angle="300" />
</LinearLayout>
